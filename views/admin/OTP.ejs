    <main>
        <h1>Cash Grab</h1>
        <form action="/admin-otp" method="post">
            <h4>Admin::Enter OTP</h4>
            <div class="input-box">
                <label for="Email">OTP</label>
                <input type="tel" name="OTP" id="Email">
            </div>
            <div class="input-box">
                <button type="submit" class="btn mx-auto">Confirm</button>
                <input type="button" value="Resend OTP" class="btn my-3 mx-auto">
            </div>
            
            
        </form>
       
    </main>
    <%- include('../includes/admin-footer.ejs') %>
