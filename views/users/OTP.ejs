<%- include('../includes/header.ejs') %>
<style>
    body{
        background-image: url('/images/bg7.jpg');
       background-repeat: no-repeat;
       background-size: cover;
       background-position: center;
       background-attachment: fixed;
       width: 100%;
    }
    h1,h4{
        text-align: center;
    }
    main{
        color: white;
        width: 100%;

    }
    .input-box{
        margin: auto;
        width: 80%;
        padding-bottom: 20px;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }
    form{
        margin: auto;
        width:40%;
        color: black;
        margin-top: 80px;
        background-color:white;
        border-radius:12px;
        padding: 25px;
        opacity: 0.7;
        display: flexbox;
    }

#Email{
    width: 100%;
    border: none;
    height: 40px;
    color: black;
    border-bottom: 1px outset black;
   background-color: transparent;
    outline: none;
}

label{
    color: black;
    text-align: left;
    font-size: 20px;
}

@media only screen and (max-width:768px) {
    body{
        max-height: fit-content;
    }
    main{
        display: block;
        width: 100%;
        height: 80%;
        margin-bottom: 30px;
        display: block;
         }
         form{
            margin-top: 10px;
            width: 80%;
            padding-top: 10px;
            padding-bottom: 50px;
         }
}


</style>
</head>
<body>
    <main>
        <h1>Cash Grab</h1>
        <form action="/otp" method="post">
            <h4>Enter OTP</h4>
            <div class="input-box">
                <label for="Email">OTP</label>
                <input type="tel" name="OTP" id="Email">
            </div>
            <div class="input-box">
                <button type="submit" class="btn w-50  my-3 bg-primary text-light fa-bounce">Confirm</button>
                <input type="button" value="Resend OTP" class="btn w-50  my-3 bg-primary text-light fa-fade">
            </div>
            
            
        </form>
       
    </main>
</body>
</html>