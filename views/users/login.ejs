<%- include('../includes/header.ejs') %>
<style>
    body{
        background-image: url('/images/bg7.jpg');
       background-repeat: no-repeat;
       background-size: cover;
       background-position: center;
       background-attachment: fixed;
       width: 100%;
    }
    h1,h4{
        text-align: center;
    }
    main{
        color: white;
        width: 100%;
    }

    .input-box{
        margin: auto;
        width: 80%;
        padding-bottom: 20px;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }
    form{
        margin: auto;
        width:40%;
        color: black;
        margin-top: 80px;
        background-color:white;
        border-radius:12px;
        padding: 25px;
        opacity: 0.7;
        display: flexbox;
    }

#Email{
    width: 100%;
    border: none;
    height: 40px;
    color: black;
    border-bottom: 1px outset black;
   background-color: transparent;
    outline: none;
}
#Password{
    width: 100%;
    border: none;
   border-bottom: 1px solid black;
   background-color: transparent;
    outline: none;
    height: 40px;
  
    color: black;
}
label{
    color: black;
    text-align: left;
    font-size: 20px;
}



@media only screen and (max-width:768px) {
    body{
        max-height: fit-content;
    }
    main{
        display: block;
        width: 100%;
        height: 80%;
        margin-bottom: 30px;
        display: block;
         }
         form{
            margin-top: 10px;
            width: 80%;
            padding-top: 10px;
            padding-bottom: 50px;
         }
}
</style>
</head>
<body style="background-color:rgb(136, 184, 232);">
    
    <main> <br> <br>
        <h1>Cash Grab</h1> 
        <form action="/sign-in" method="post">
            <h4>Sign In</h4> <hr>
            <div class="input-box">
                <label for="Email">Email</label>
                <input type="text" name="Email" id="Email">
            </div>
    
            <div class="input-box">
                <label for="Password">Password</label>
                <input type="password" name="Password" id="Password">
            </div>
    <div class=" text-center">
        <button type="submit" class="btn w-50  my-3 bg-primary text-light fa-bounce">Login <span class="fas fa-sign-in fa  fa-bounce"></span></button>
    </div>
           
        </form>
    </main>
    
    <%- include('../includes/footer.ejs') %>
</body>
</html>