<%- include('../includes/header.ejs') %>
<style>
    body{
        /* background-image: url('/images/backgroundImg.jpg'); */
        background-color:rgb(12, 23, 51) ;
    }
    h1,h4{
        text-align: center;
    }
    main{
        background-image: url('/images/loan-image2.jpg');
        background-position: center;
        color: white;
        display: flex;
        max-width: 100%;
        object-fit: cover;
        align-items: center;
        justify-content: space-between;
        
    }
    .input-box{
        padding-bottom: 5px;
     display: flex;
     flex-direction: column;
    }
    form{
        /* border: 2px solid white; */
        color: white;
        font-weight: 900;
        background-color: rgb(12, 23, 51);
        border-radius: 30px;
        box-shadow: inset;
        opacity: 96%;
        padding: 5px;
        max-width: 100%;
    }

.Email{
    width: 100%;
    border: none;
    border-radius: 9px;
    height: 40px;
    background-color: rgb(2, 6, 16);
    color: white;
}
.Password{
    width: 100%;
    border: none;
    border-radius: 9px;
    height: 40px;
    background-color: rgb(2, 6, 16);
    color: white;
}
label{
    color: white;
    text-align: left;
    font-size: 20px;
    /* margin-bottom: 50px; */
}
.Email:hover{
    border-bottom: 2px solid white;
    box-shadow: 3px, 3px, 4px, white;
   
}
.Password:hover{
    border-bottom: 2px solid white;
    box-shadow: 3px, 9px, 14px, white;
}
.btn{
    /* width: 70%; */
    height: 30px;
    border-radius: 10px;
    font-size: medium;
    font-weight: 500px;
}
.btn:hover{
    background-color: rgb(12, 23, 51);
    color: rgb(207, 15, 15);
}
section{
       /* margin: auto; */
        /* width:40%; */
        border: 2px solid white;
        color: white;
        background-color: rgb(12, 23, 51);
        border-radius: 30px;
        box-shadow: inset;
        opacity: 50%;
        /* display: flex; */

        padding: 5px;
}
.holder{
    /* max-width: 100%; */
    width: 100%;
    display: flex;
    align-items: center;
}
#improve{
    background-color: white;
  color: rgb(12, 23, 51);
}
@media only screen and(max-width:768px){
    form{
        margin: auto;
        width:100%;
       
        /* height: 80%; */
    }
    main{
        height: fit-content;
        /* height: 100%; */
    }
}

</style>

<body>
    <div>
        <%- include('../includes/navbar.ejs') %>
      </div> 
    <main>
      
      <div class="holder ps-5 container">
        <form action="/update-profile" id="form" method="post" class="text-danger row w-100 " enctype="multipart/form-data">
            
            <section class="col-6 px-3">
                <div class="input-box">
                    <label for="Name">Name</label><br>
                    <input type="text" name="Name" id="Name" class="Email" placeholder="Enter name...">
                </div>
    
                
                <div class="input-box">
                    <label for="Phone">Phone Number</label><br>
                    <input type="tel" name="Phone" id="Phone" class="Email" placeholder="Enter phone number">
                </div>
    
                <div class="input-box">
                    <label for="Bvn">BVN</label> <br>
                    <input type="text" name="Bvn" id="Bvn" class="Password"  placeholder="Enter BVN">
                </div>

                <div class="input-box">
                    <label for="Bank">Bank</label><br>
                    <select name="Bank" id="Bank" class="Email">
                        <option value="Access Bank">Access Bank</option>
                        <option value="GT Bank">GT Bank</option>
                        <option value="First Bank">First Bank</option>
                        <option value="Polaris Bank">Polaris Bank</option>
                        <option value="Jaiz Bank">Jaiz Bank</option>
                        <option value="Ecobank">Ecobank</option>
                    </select>
                </div>

                <div class="input-box">
                    <label for="Monthly Income">Salary</label> <br>
                    <input type="number" name="Salary" id="Salary" class="Password"  placeholder="Enter monthly income">
                </div>
            </section>
          

            <section class="col-6">
                <div class="input-box">
                    <label for="Account">Account Number</label> <br>
                    <input type="number" name="Account" id="Account" class="Password"  placeholder="Enter Account Number">
                </div>
                
                <div class="input-box">
                    <label for="Adress">Address</label> <br>
                    <input type="text" name="Address" id="Address" class="Password"  placeholder="Address">
                </div>
                <div class="input-box">
                    <label for="ID">ID Card</label><br>
                    <input type="file" name="ID" id="ID" class="Email" placeholder="Nationaal ID-card, Intl Passport ...">
                </div>

                <div class="input-box">
                    <label for="BankStatement">Bank Statement</label><br>
                    <input type="file" name="BankStatement" id="BankStatement" class="Email" placeholder="Bank Statement...">
                </div>
    
                
                <div class="input-box">
                    <label for="Picture">Passport Photograph</label><br>
                    <input type="file" name="Picture" id="Picture" class="Email" placeholder="Nationaal ID-card, Intl Passport ...">
                </div>
    
            </section>
            
    <div class="my-4 text-center">
        <button type="submit" class="btn btn-outline-danger w-25">Submit</button>
    </div>
          
        </form>
      </div>  
      </main>  
    <%- include('../includes/footer.ejs') %>
</body>
</html>